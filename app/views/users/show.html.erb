<table>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.first_name, user %></td>
    </tr>
  <% end %>
</table>

<% @messages.each do |message| %>
  <p><%= "#{@current_user.first_name}: #{message.message}" %></p>
<% end %>

<div id='1'></div>

<div id="<%= @current_user.chat_id %>"></div>

<div class="input-box">
  <input type="text" class="input-box_text" id="message_input"/>
</div>